<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet Configuration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>health.hub.Secutity.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Filter Configuration -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>health.hub.Secutity.AuthFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/health/pharmacies/</url-pattern>
        <url-pattern>/api/health/users/all</url-pattern>
    </filter-mapping>



</web-app>
